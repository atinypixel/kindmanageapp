if @context == "entry"
  page["#for_entry .form_area"].hide
  page["#for_entry"].replace_html :partial => "entries/item", 
    :locals => {
      :entry => @entry, 
      :project => @entry.project,
      :context => @context, 
      :standalone => true }
  page["#entry_#{@entry.id}"].visual_effect :highlight
end