#page
  %h5.label Projects  
  %h1.name
    -unless @entry
      =@project.name
    -else
      =link_to @project.name, project_path(@project)
      
#content
  #entry
    #entry_form{:style => "display:none;"}
    #for_single_entry
      =render :partial => "entries/entry", :locals => {:entry => @entry, :project => @project, :single_entry => true}
    
