%a{:id => "entry_marker_#{entry.id}"}
.entry{:class => entry.type.name, :id  => "entry_#{entry.id}"}

  / label
  %ul.type
    %li.label
      %span=entry.type.name

  / content + meta    
  .content
    .body
      =render :partial => "entries/#{entry.type.name}", :locals => {:entry => entry}
    .meta
      %span.created_at="#{time_ago_in_words(entry.created_at)} ago"
  
  / actionable links + etc
  .options
    .group
      -unless single_entry
        =link_to "Open", project_entry_path(project, entry)
        |
      =link_to_remote "Edit", :url => edit_project_entry_path(project, entry, :type => entry.type, :context => "#{single_entry ? 'entry' : 'project'}"), :method => :get
      |
      =link_to_remote "Delete", :url => project_entry_path(project, entry, :context => "#{single_entry ? 'entry' : 'project'}"), :method => :delete
    .group
      =link_to "Add to a workspace", "#"
      
