!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
  %head
    %title Kindmanage - Manage projects like a ninja
    =javascript_include_tag :defaults
    =javascript_include_tag "cufon/cufon.js"
    =javascript_include_tag "cufon/Museo_500-Museo_700.font.js"
    =stylesheet_link_tag "login.css"
    
    :javascript
      Cufon.replace('#logo_text');
      
    
  %body#login
    #wrapper
      -form_for @user_session, :url => user_session_path do |f|
        #logo_text <strong>Login</strong> to Kindmanage 
        -unless flash[:notice].nil?
          %div.flash=flash[:notice]
        %div
          =f.label :email
          =f.text_field :email, :class => "text"
        %div
          =f.label :password
          =f.password_field :password, :class => "text"
        %div
          =f.submit "Login"
          
          / <h1>Login</h1>
          / 
          / <% form_for @user_session, :url => user_session_path do |f| %>
          /   <%= f.error_messages %>
          /   <%= f.label :login %><br />
          /   <%= f.text_field :login %><br />
          /   <br />
          /   <%= f.label :password %><br />
          /   <%= f.password_field :password %><br />
          /   <br />
          /   <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
          /   <br />
          /   <%= f.submit "Login" %>
          / <% end %>
      
      #footer