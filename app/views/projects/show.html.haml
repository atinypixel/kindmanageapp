#page
  %h5.label 
    %span Project  
  %h1.name
    -unless @entry
      =@project.name
    -else
      =link_to @project.name, project_path(@project)

#content
  =render :partial => "create_ribbon", :locals => {:project => @project }
  
  #entries
    #notice.clear{:style => "display: none;"}
    #entry_form
      .form_area{:style => "display: none;"}
    #for_queue
    #for_project
      -unless @entries.empty?
        =render :partial => "entries/show", :collection => @entries, :as => :entry, :locals => {:project => @project, :standalone => false, :context => view_context(current_object), :inbox_mode => true}
      -else
        %h2.empty There are no entries for this project
        
  
  

