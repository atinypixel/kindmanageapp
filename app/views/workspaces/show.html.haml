#page.workspace
  %h5.label
    %span Workspace
  %h1.name
    =@workspace.name.humanize
    -if @workspace.project
      %span.sub for
      %span.project=link_to @workspace.project.name, project_path(@workspace.project)
#content
  #entries
    #for_workspace
      -@workspace.collections.each do |c|
        =render :partial => "entries/entry", :locals => {:entry => c.entry, :project => c.entry.project, :standalone => false}  
