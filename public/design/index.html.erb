<body>
  <div id="wrapper">
    <div id="header">
      <div class="project_details">
        <h5 class="label">project</h5>
        <h1 class="name">The Jones Residence</h1>
      </div>
    </div>
    <div id="content">
      <ul id="create_entry" class="ribbon">
        <li class="create_label">&nbsp;</li>
        <li><a href="#"><span>Task</span></a></li>
        <li><a href="#"><span>Note</span></a></li>
        <li><a href="#"><span>Issue</span></a></li>
        <li><a href="#"><span>Mockup</span></a></li>
      </ul>
      
      <div id="entry_form">
        <form>
          <fieldset class="main">
            <legend>new task</legend>
            <div class="row">
              <label for="describe_your_task_here">Title</label>
              <input type="text/submit/hidden/button" name="describe_your_task_here" value="" id="describe_your_task_here" class="title">
              <!-- <textarea name="task_description" class=""></textarea> -->
            </div>
            <div class="row">
              <label for="describe_your_task_here">Body</label>
              <!-- <input type="text/submit/hidden/button" name="describe_your_task_here" value="" id="describe_your_task_here" class="title"> -->
              <textarea name="task_description" class="" rows="8"></textarea>
            </div>
            <div class="buttons">
              <input type="submit" value="Create note" />
            </div>
          </fieldset>
          <fieldset class="options">
          
          </fieldset>
        </form>
      </div>
      
      <div id="entries">
        
        <div class="note entry">
          <ul class="type">
            <li class="label"><span>note</span></li>
          </ul>
          <div class="content">
